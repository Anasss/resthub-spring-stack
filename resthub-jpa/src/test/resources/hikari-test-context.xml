<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="hikariDataSourceFactory" class="org.resthub.jpa.pool.HikariDataSourceTestFactory"/>

    <bean id="dataSource" class="com.zaxxer.hikari.HikariTestDataSource" destroy-method="shutdown"
          factory-bean="hikariDataSourceFactory" factory-method="create">
        <constructor-arg ref="dataSourceProperties"/>
    </bean>

    <bean id="entityManagerFactory" class="org.resthub.jpa.factory.FakeEntityManagerFactory"/>

</beans>